{
  "name": "bgchooser",
  "version": "0.0.1",
  "description": "Board Game Chooser",
  "main": "index.js",
  "repository": "https://github.com/EdSalisbury/bgchooser",
  "author": "Ed Salisbury",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@prisma/client": "5.7.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./dist/main.js",
    "dev:start": "NODE_ENV=development nodemon ./src/main.ts",
    "dev:db:start": "dotenv -- bash -c 'docker run --name mysql -e MYSQL_RANDOM_ROOT_PASSWORD=1 -e MYSQL_USER=${MYSQL_USER} -e MYSQL_PASSWORD=${MYSQL_PASSWORD} -e MYSQL_DATABASE=${DB_NAME} -p 3306:3306 -d mysql'",
    "dev:db:stop": "docker stop mysql && docker rm mysql",
    "dev:db:shell": "dotenv -- bash -c 'docker exec -it mysql mysql -u ${MYSQL_USER} -p${MYSQL_PASSWORD}'",
    "build": "rm -rf ./dist && tsc && prisma generate",
    "package": "yarn build && rm -f dist.zip && zip dist.zip ./dist/main.js ./dist/*.module.js ./dist/*.service.js ./dist/*.controller.js ./dist/**/*.module.js ./dist/**/*.controller.js ./dist/**/*.service.js ./dist/**/dto/* .env.production package.json yarn.lock",
    "deploy": "yarn package && eb deploy",
    "test": "jest --config jest.config.js",
    "lint": "eslint '*/**/*.{ts,tsx}'",
    "logs": "eb logs",
    "format": "prettier --write '*/**/*.{ts,tsx,json}'"
  }
}
